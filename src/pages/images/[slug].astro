---
export async function getStaticPaths() {
  // Assuming you have a list of image slugs
  const imageSlugs = ['image1', 'image2', 'image3'];

  return imageSlugs.map((slug) => {
    return {
      params: { slug },
    };
  });
}

const { slug } = Astro.params;

// Use the slug to serve the corresponding image
---
<img src={`/assets/${slug}.jpg`} alt={slug} />